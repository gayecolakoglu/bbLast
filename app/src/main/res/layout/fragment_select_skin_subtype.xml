<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SelectSkinSubtypeFragment">

    <FrameLayout
        android:id="@+id/selectSkinSubtype_frameLayout"
        android:layout_width="413dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toTopOf="@id/btnSave_in_SkinSubtype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox4">

    </FrameLayout>

    <TextView
        android:id="@+id/txtAcne"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:minHeight="48dp"
        android:text="Acne-prone "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/selectSkinSubtype_frameLayout"
        app:layout_constraintEnd_toStartOf="@id/checkBox4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDehydrated" />

    <TextView
        android:id="@+id/txtSkinSubtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center"
        android:text="Select Skin Subtype"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txtRedness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/txtRedness"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:minHeight="48dp"
        android:text="Redness-prone"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/txtSensitive"
        app:layout_constraintEnd_toStartOf="@id/checkBox1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSkinSubtype" />

    <TextView
        android:id="@+id/txtDehydrated"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="Dehydrated "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/txtAcne"
        app:layout_constraintEnd_toStartOf="@id/checkBox3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSensitive" />

    <TextView
        android:id="@+id/txtSensitive"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="Sensitive "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDehydrated"
        app:layout_constraintEnd_toStartOf="@id/checkBox2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRedness" />

    <Button
        android:id="@+id/btnSave_in_SkinSubtype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectSkinSubtype_frameLayout" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/checkBox2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtRedness"
        app:layout_constraintTop_toBottomOf="@+id/txtSkinSubtype" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/checkBox3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtSensitive"
        app:layout_constraintTop_toBottomOf="@+id/checkBox1"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/checkBox4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDehydrated"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/selectSkinSubtype_frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtAcne"
        app:layout_constraintTop_toBottomOf="@id/checkBox3" />


</androidx.constraintlayout.widget.ConstraintLayout>