<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SelectSkinTypeFragment">

    <FrameLayout
        android:id="@+id/selectSkinType_frameLayout"
        android:layout_width="413dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toTopOf="@id/btnSave_in_SkinType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3">

    </FrameLayout>

    <TextView
        android:id="@+id/txtNormal"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:minHeight="48dp"
        android:text="Normal "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/txtCombination"
        app:layout_constraintEnd_toStartOf="@id/radioButton3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDry" />


    <TextView
        android:id="@+id/txtCombination"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:minHeight="48dp"
        android:text="Combination "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/selectSkinType_frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/radioButton4"
        app:layout_constraintTop_toBottomOf="@id/txtNormal" />

    <TextView
        android:id="@+id/txtOiler"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:minHeight="48dp"
        android:text="On the oilier side"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/txtDry"
        app:layout_constraintEnd_toStartOf="@id/radioButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/txtDry"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="Dry "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/txtNormal"
        app:layout_constraintEnd_toStartOf="@id/radioButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtOiler" />

    <Button
        android:id="@+id/btnSave_in_SkinType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectSkinType_frameLayout" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/radioButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtOiler"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/radioButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDry"
        app:layout_constraintTop_toBottomOf="@id/radioButton1"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/radioButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNormal"
        app:layout_constraintTop_toBottomOf="@id/radioButton2" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/selectSkinType_frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCombination"
        app:layout_constraintTop_toBottomOf="@id/radioButton3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center"
        android:text="Select Skin Type"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txtOiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>